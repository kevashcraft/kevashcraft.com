{% extends 'templates/master.twig' %}

{% set title = folder.folderName %}

{% block content %}
<section>
  <div class="flex">
    <div>
      <img src="{{ folder.folderLogo }}" alt="{{ folder.folder  }} icon">
    </div>
    <div class="stretch">
      <p>These are all of the tutorials for {{ folder.folderName }}, sorted by most recent.</p>
    </div>
  </div>
</section>
<section>
  <h3><a href="/{{ folder.folder }}/" title="{{ folder.folderName }} Tutorials">{{ folder.folderName }} Tutorials</a></h3>
  <ul class="post-list">
    {% for tutorial in folder.tutorials %}
    <li>
      <span>{{ tutorial.date|date("M jS, 'y") }}</span> - <a href="/{{ folder.folder }}/{{ tutorial.page }}/" title="{{ tutorial.title }}">{{ tutorial.title }}</a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endblock %}
